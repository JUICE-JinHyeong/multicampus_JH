    VALUES  (1007, '목캔디', 3000, 500);
    
--13번 문제

INSERT  INTO    ORDERS  (ORDERNO, ORDERDATE, ADDRESS, PHONE, STATUS, CNO)
    VALUES  (4, SYSDATE,
            '제주 동광양', '352-4657', '결제완료', (SELECT CNO FROM CUSTOMERS WHERE CNAME = '최진국'));
            
INSERT  INTO    ORDERDETAIL (ORDERNO, PNO, QTY, COST)
    VALUES  (4, 1007, 200, 3000);

UPDATE  PRODUCTS    SET STOCK = (SELECT STOCK FROM PRODUCTS WHERE PNO = 1007 ) - 200
WHERE   PNO = 1007;

SELECT  O.ORDERDATE, CM.CNAME, O.ADDRESS, O.PHONE, O.STATUS, PR.PNAME, OD.COST, OD.QTY, OD.COST*OD.QTY
FROM    ORDERS          O
JOIN    ORDERDETAIL     OD      ON(O.ORDERNO = OD.ORDERNO) 
JOIN    CUSTOMERS       CM      ON(O.CNO = CM.CNO)
JOIN    PRODUCTS        PR      ON(OD.PNO = PR.PNO);
