-- 9번 문제
UPDATE  PRODUCTS    SET STOCK = (SELECT STOCK FROM PRODUCTS WHERE PNO = 1004 ) - 100
WHERE   PNO = 1004;
UPDATE  PRODUCTS    SET STOCK = (SELECT STOCK FROM PRODUCTS WHERE PNO = 1005 ) - 50
WHERE   PNO = 1005;
SELECT  * FROM PRODUCTS;

-- 10번 문제
SELECT  O.ORDERDATE, CM.CNAME, O.ADDRESS, O.PHONE, O.STATUS, PR.PNAME, OD.COST, OD.QTY, OD.COST*OD.QTY
FROM    ORDERS          O
JOIN    ORDERDETAIL     OD      ON(O.ORDERNO = OD.ORDERNO) 
JOIN    CUSTOMERS       CM      ON(O.CNO = CM.CNO)
JOIN    PRODUCTS        PR      ON(OD.PNO = PR.PNO);

-- 11번 문제

SELECT  O.ORDERDATE, SUM(OD.COST*OD.QTY)
FROM    ORDERS          O
JOIN    ORDERDETAIL     OD      ON(O.ORDERNO = OD.ORDERNO)
GROUP   BY  O.ORDERDATE;

