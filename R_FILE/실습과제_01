-- 7번 문제

UPDATE  PRODUCTS    SET STOCK = (SELECT STOCK FROM PRODUCTS WHERE PNO = 1002 ) - 100
WHERE   PNO = 1002;
UPDATE  PRODUCTS    SET STOCK = (SELECT STOCK FROM PRODUCTS WHERE PNO = 1003 ) - 150
WHERE   PNO = 1003;
SELECT  * FROM PRODUCTS;

