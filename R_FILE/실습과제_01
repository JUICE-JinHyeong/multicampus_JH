-- 4번 문제
INSERT  INTO    ORDERS  (ORDERNO, ORDERDATE, ADDRESS, PHONE, STATUS, CNO)
    VALUES  (1, SYSDATE-3,
            '서울 강남구', '899-6666', '결제완료', (SELECT CNO FROM CUSTOMERS WHERE CNAME = '김철수'));
            
INSERT  INTO    ORDERDETAIL (ORDERNO, PNO, QTY, COST)
    VALUES  (1, 1001, 50, 1000);

SELECT  O.ORDERNO, O.ORDERDATE, CM.CNAME, O.ADDRESS, O.PHONE, O.STATUS, PR.PNAME, OD.COST, OD.QTY
FROM    ORDERS          O
JOIN    ORDERDETAIL     OD      ON(O.ORDERNO = OD.ORDERNO) 
JOIN    CUSTOMERS       CM      ON(O.CNO = CM.CNO)
JOIN    PRODUCTS        PR      ON(OD.PNO = PR.PNO);

-- 5번 문제
UPDATE  PRODUCTS    SET STOCK = (SELECT STOCK FROM PRODUCTS WHERE PNO = 1001 ) - 50
WHERE   PNO = 1001;
SELECT  * FROM PRODUCTS;

